{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://brain.dev/schemas/domain/workflow.json",
  "title": "WorkflowState",
  "description": "Schema for workflow state validation. Validates mode values and conditional task requirements.",
  "type": "object",
  "properties": {
    "mode": {
      "type": "string",
      "enum": ["", "analysis", "planning", "coding"],
      "description": "Current workflow mode. Empty string indicates no active workflow."
    },
    "task": {
      "type": "string",
      "description": "Current task description. Required when mode is 'coding'."
    },
    "sessionId": {
      "type": "string",
      "description": "Optional session identifier."
    },
    "updatedAt": {
      "type": "string",
      "description": "ISO timestamp of last update."
    }
  },
  "additionalProperties": false,
  "allOf": [
    {
      "if": {
        "properties": {
          "mode": { "const": "coding" }
        },
        "required": ["mode"]
      },
      "then": {
        "properties": {
          "task": {
            "type": "string",
            "minLength": 1
          }
        },
        "required": ["task"]
      }
    }
  ]
}
