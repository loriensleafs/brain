{
  "name": "brain-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.3.8",
  "engines": {
    "bun": ">=1.3.8"
  },
  "workspaces": [
    "apps/claude-plugin/skills/memory/scripts",
    "apps/mcp",
    "packages/*"
  ],
  "scripts": {
    "prepare": "lefthook install",

    "build": "turbo run build",
    "build:tui": "cd apps/tui && go build -o brain ./main.go",
    "dev": "turbo run dev",
    "start": "turbo run start",

    "generate:types": "turbo run generate:types",
    "typecheck": "turbo run typecheck",

    "test": "turbo run test",
    "test:changed": "turbo run test --filter='[HEAD^1]'",
    "test:coverage": "turbo run test -- --coverage",
    "test:fast": "vitest run --no-coverage --reporter=dot",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",

    "check": "biome check --max-diagnostics=none .",
    "check:fix": "biome check --write --max-diagnostics=none .",
    "format": "biome format --max-diagnostics=none .",
    "format:fix": "biome format --write --max-diagnostics=none .",
    "lint": "biome lint --max-diagnostics=none .",
    "lint:fix": "biome lint --write --max-diagnostics=none .",

    "clean": "turbo run clean"
  },
  "dependencies": {
    "@brain/utils": "workspace:*",
    "@brain/validation": "workspace:*"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@types/bun": "latest",
    "@types/node": "^25.0.8",
    "bun-types": "^1.3.8",
    "lefthook": "^1.11.5",
    "turbo": "^2.8.1",
    "typescript": "^5.7.0"
  }
}
