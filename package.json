{
  "name": "brain-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.3.8",
  "workspaces": [
    "packages/*",
    "packages/validation/wasm",
    "apps/mcp",
    "scripts"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:wasm": "turbo run build:wasm",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "lint": "turbo run lint",
    "dev": "turbo run dev",
    "clean": "turbo run clean",
    "build:validation": "cd packages/validation && GOOS=js GOARCH=wasm go build -o wasm/dist/validation.wasm ./wasm/main.go",
    "build:tui": "cd apps/tui && go build -o brain ./main.go"
  },
  "dependencies": {
    "@brain/utils": "workspace:*",
    "@brain/validation": "workspace:*"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "turbo": "^2.8.1",
    "typescript": "^5.7.0"
  },
  "engines": {
    "bun": ">=1.3.8"
  }
}
