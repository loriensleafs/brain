{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"lib": ["ES2022", "DOM"],
		"types": ["bun-types"],
		"strict": false,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"allowImportingTsExtensions": true,
		"noEmit": true,
		"allowJs": true,
		"resolveJsonModule": true
	},
	"include": ["*.ts"],
	"exclude": ["node_modules"]
}
